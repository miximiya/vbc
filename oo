#include <stdio.h>
#include <string.h>
int main()
{
	char s[1000];
	char w[10];
	int si,wi,k,i,j;
	printf("请输入你的sentence\n");
	gets (s);
	printf("请输入你的word\n");
	gets (w);
	strlwr(s);
    strlwr(w);

    si=strlen(s);
    wi=strlen(w);
	k=0;


	for(i=0;i<si-wi;i++)


		for(j=0;j<wi;j++)
		
			if(s[i]==w[j])
			{
			
				k++;
				printf("您输入的%s句子  其中有%s共%d个\n",s,w,k);
			}
		



}
#include <stdio.h>
#include <string.h>
int main()
{
	char s[1000];
	char w[10];
	int si,wi,k,i,j;
	printf("请输入你的sentence\n");
	gets (s);
	printf("请输入你的word\n");
	gets (w);
	strlwr(s);
    strlwr(w);

    si=strlen(s);
    wi=strlen(w);
	k=0;


	for(i=0;i<si-wi;i++)


		for(j=0;j<wi;j++)
		
			if(s[i]==w[j])
			{
			
				k++;
				printf("您输入的%s句子  其中有%s共%d个\n",s,w,k);
			}
		



}
